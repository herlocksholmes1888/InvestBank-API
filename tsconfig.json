{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleDetection": "force"
  },
  "include": [
    "src/**/*.ts"
  ],
  "ts-node": {
    "esm": true
  }
}